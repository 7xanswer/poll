{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}

{% if is_granted('ROLE_USER') %}
    <h1>Question index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Is_multiple</th>
                <th>Final_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.label }}</td>
                <td>{{ question.isMultiple ? 'Yes' : 'No' }}</td>
                <td>{{ question.finalDate }}</td>
                <td>
                    <a href="{{ path('question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('question_new') }}">Create new</a>

{% endif %}


{% if is_granted('ROLE_USER') == false %}

<h1>Veuillez vous connecter ici</h1>

{% endif %}

{% endblock %}
