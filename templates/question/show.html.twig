{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ question.label }}</td>
            </tr>
            <tr>
                <th>Is_multiple</th>
                <td>{{ question.isMultiple ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Final_date</th>
                <td>{{ question.finalDate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
