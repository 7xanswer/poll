{% extends 'base.html.twig' %}

{% block title %}Result index{% endblock %}

{% block body %}
    <h1>Vos réponse</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ip</th>
                <th>Question</th>
                <th>Reponse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.ip }}</td>
                <td>a def</td>
                <td>a def</td>
                <td>
                    <a href="{{ path('result_show', {'id': result.id}) }}">show</a>
                    <a href="{{ path('result_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1>Répondre à une question </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in question %}
            <tr>
                <td>{{question.label}}</td>
                <td>
                    <a href="{{ path('result_new', {'id': question.id}) }}">Repondre</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
